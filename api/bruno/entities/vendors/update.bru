meta {
  name: Update Vendor
  type: http
  tags: [
    entities
    vendors
  ]
}

put {
  url: {{baseUrl}}/api/{{apiVersion}}/vendors/{{entities.vendors.folder.vendorId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{jwt_token}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "entities.vendors.folder.vendor",
    "email": "updated@vendor.local",
    "phone": "+9876543210",
    "address": "Updated Vendor Address"
  }
}

tests {
  test("should return 200 OK", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("should return success status", function() {
    const body = res.getBody();
    expect(body).to.have.property('success');
    expect(body.success).to.equal(true);
  });

  test("should return updated vendor object", function() {
    const body = res.getBody();
    expect(body.data).to.be.an('object');
  });

  test("should return vendor with correct ID", function() {
    const body = res.getBody();
    expect(body.data).to.have.property('id');
    expect(body.data.id).to.equal(bru.getVar('entities.vendors.folder.vendorId'));
  });

  test("should have updated email", function() {
    const body = res.getBody();
    const vendor = body.data;
    expect(vendor.email).to.equal("updated@vendor.local");
  });

  test("should have updated phone", function() {
    const body = res.getBody();
    const vendor = body.data;
    expect(vendor.phone).to.equal("+9876543210");
  });

  test("should have updated address", function() {
    const body = res.getBody();
    const vendor = body.data;
    expect(vendor.address).to.equal("Updated Vendor Address");
  });

  test("should return vendor with required fields", function() {
    const body = res.getBody();
    const vendor = body.data;
    expect(vendor).to.have.property('name');
    expect(vendor).to.have.property('email');
    expect(vendor).to.have.property('phone');
    expect(vendor).to.have.property('address');
    expect(vendor).to.have.property('balance');
    expect(vendor).to.have.property('updatedAt');
  });
}
