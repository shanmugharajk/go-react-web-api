meta {
  name: Create Vendor (Duplicate Name)
  type: http
  tags: [
    entities
    vendors
  ]
}

post {
  url: {{baseUrl}}/api/{{apiVersion}}/vendors
  body: json
  auth: bearer
}

auth:bearer {
  token: {{jwt_token}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "entities.vendors.folder.vendor",
    "email": "duplicate@vendor.local",
    "phone": "+1234567890",
    "address": "Duplicate Vendor Address"
  }
}

tests {
  test("should return 400 Bad Request", function() {
    expect(res.getStatus()).to.equal(400);
  });

  test("should return error response", function() {
    const body = res.getBody();
    expect(body).to.have.property('success');
    expect(body.success).to.equal(false);
  });

  test("should return error message", function() {
    const body = res.getBody();
    expect(body).to.have.property('error');
    expect(body.error).to.be.a('string');
  });
}
