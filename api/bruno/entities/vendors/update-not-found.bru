meta {
  name: Update Vendor (Not Found)
  type: http
  tags: [
    entities
    vendors
  ]
}

put {
  url: {{baseUrl}}/api/{{apiVersion}}/vendors/00000000-0000-0000-0000-000000000000
  body: json
  auth: bearer
}

auth:bearer {
  token: {{jwt_token}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "entities.vendor.update-not-found",
    "email": "notfound@vendor.local",
    "phone": "+1234567890",
    "address": "Not Found Vendor Address"
  }
}

tests {
  test("should return 404 Not Found", function() {
    expect(res.getStatus()).to.equal(404);
  });

  test("should return error response", function() {
    const body = res.getBody();
    expect(body).to.have.property('success');
    expect(body.success).to.equal(false);
  });

  test("should return error message", function() {
    const body = res.getBody();
    expect(body).to.have.property('error');
    expect(body.error).to.be.a('string');
  });
}
